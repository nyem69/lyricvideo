{
  "manifest_version": 3,
  "name": "Suno Lyric Timestamps",
  "version": "1.0",
  "description": "Extract lyric timestamps from the Suno studio editor",
  "permissions": ["activeTab", "scripting", "clipboardWrite"],
  "host_permissions": ["https://suno.com/*"],
  "content_scripts": [
    {
      "matches": ["https://suno.com/edit/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Suno Lyric Timestamps"
  }
}